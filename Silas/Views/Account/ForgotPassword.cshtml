@{
    Layout = "_Layout";
    ViewData["Title"] = "Recuperar Contraseña";
}

<div class="login-box">
    <div class="login-header">
        <img src="/images/logoSalesianos.jpg" alt="Logo" />
        <h2>Recuperar contraseña</h2>
        <p>Ingresa tu correo electrónico</p>
    </div>

    <form method="post" asp-controller="Account" asp-action="ForgotPassword">
        <div class="form-group">
            <label for="email">Correo electrónico</label>
            <input type="email" id="email" name="Email" required />
        </div>
        <button type="submit" class="btn-primary">Enviar</button>
    </form>

    <!-- BOTÓN VOLVER -->
    <br />
    <a href="/Account/Login" class="btn-secondary">Volver al login</a>
</div>
