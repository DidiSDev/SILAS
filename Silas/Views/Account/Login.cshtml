@{
    Layout = "_Layout"; // _Layout principal que actuará de Index
    ViewData["Title"] = "Login";
}

<div class="login-box">
    <div class="login-header">
        <!-- LOGO/CODIGO -->
        <img src="/images/logoSalesianos.jpg" alt="Logo" />
        <h2>COLEGIO SALESIANO SAN JOSÉ</h2>
        <p>Código de centro: 1045</p>
        <!--PRUEBA NUEVA-->
    </div>

    <form method="post" asp-controller="Account" asp-action="Login">
        <div class="form-group">
            <label for="username">Nombre de usuario</label>
            <input type="text" id="username" name="Username" required />
        </div>
        <div class="form-group">
            <label for="password">Contraseña</label>
            <input type="password" id="password" name="Password" required />
        </div>
        <button type="submit" class="btn-primary">Acceder</button>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.Mensaje)) ;
    <!-- Mostramos mensaje de confirmación de registro -->
    <p>@ViewBag.Mensaje</p>

    <br />
    <a href="/Account/ForgotPassword">He olvidado mis claves de acceso</a>
    <br />
    <a href="/Account/Register">¿No tienes cuenta? Regístrate</a>
    <br/>
    <a href="/Account/Generic">Ingreso temporal</a>
</div>

