@model Silas.ViewModels.CompanyDetailsViewModel

<h2>Detalles de la Empresa: @Model.Company.Name</h2>
<div>
    <p><strong>Dirección:</strong> @Model.Company.Adress</p>
    <p><strong>Teléfono:</strong> @Model.Company.Telephone</p>
    <p><strong>Contacto:</strong> @Model.Company.Contact</p>
    <p><strong>Móvil:</strong> @Model.Company.Mobile</p>
</div>

<h3>Ofertas de la Empresa</h3>
<table class="table">
    <thead>
        <tr>
            <th>ID Oferta</th>
            <th>Título</th>
            <th>Fecha</th>
            <th>Requisitos</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var offer in Model.Offers)
        {
            <tr>
                <td>@offer.id</td>
                <td>@offer.title</td>
                <td>@offer.date.ToString("dd/MM/yyyy")</td>
                <td>@offer.requiriments</td>
                <td>
                    <a asp-controller="Offer" asp-action="Applications" asp-route-id="@offer.id">Ver Oferta (Aplicaciones)</a> |
                    <a asp-controller="Offer" asp-action="EditOffer" asp-route-id="@offer.id">Modificar Oferta</a> |
                    <form asp-controller="Offer" asp-action="DeleteOffer" method="post" style="display:inline;">
                        <input type="hidden" name="companyId" value="@Model.Company.IdUser" />
                        <button type="submit" class="btn btn-danger btn-sm">Eliminar Oferta</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
