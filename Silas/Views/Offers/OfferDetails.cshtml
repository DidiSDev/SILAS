@model Silas.ViewModels.OfferDetailsViewModel

<div class="offer-details-container">
    <h2>Detalles de la Oferta</h2>
    <form>
        <div class="form-group">
            <label>ID</label>
            <input type="text" class="form-control" value="@Model.OfferData.id" readonly />
        </div>
        <div class="form-group">
            <label>Título</label>
            <input type="text" class="form-control" value="@Model.OfferData.title" readonly />
        </div>
        <div class="form-group">
            <label>Descripción</label>
            <textarea class="form-control" rows="3" readonly>@Model.OfferData.description</textarea>
        </div>
        <div class="form-group">
            <label>Requisitos</label>
            <textarea class="form-control" rows="3" readonly>
Haber cursado los siguientes grados:
1- @Model.OfferData.course_name ("@Model.OfferData.course_acronim")
            </textarea>
        </div>
        <div class="form-group">
            <label>Fecha</label>
            <input type="text" class="form-control" value="@Model.OfferData.date.ToString("dd/MM/yyyy")" readonly />
        </div>
        <div class="form-group">
            <label>Ubicación</label>
            <input type="text" class="form-control" value="@Model.OfferData.location" readonly />
        </div>
        <div class="form-group">
            <label>ID Empresa</label>
            <input type="text" class="form-control" value="@Model.OfferData.id_company" readonly />
        </div>
    </form>
</div>
