@model Silas.ViewModels.OffersToStudentProfileViewModel
@{
}
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Titulo</th>
            <th scope="col">Descripción</th>
            <th scope="col">Localización</th>
            <th scope="col">Empresa</th>
            <th scope="col">Fecha Oferta</th>
            <th scope="col">Acciones</th>
        </tr
    </thead>
    <tbody>
        @for(var i = 0; i < Model.OffersList.Count; i++)
        {
            <tr>
                <th scope="row">@(i + 1)</th>
                <th> @Model.OffersList[i].OffersTitle</th>
                <th> @Model.OffersList[i].OffersDescription</th>
                <th> @Model.OffersList[i].OffersLocation</th>
                <th> @Model.OffersList[i].CompaniesName</th>
                <th> @Model.OffersList[i].OffersDate.ToString("dd/MM/yyyy")</th>
                <th class="text-center">
                    @if(Model.OffersList[i].Stude)
                    <a href="#"><i class="bi bi-bookmark-plus" style="font-size: 2rem;"></i></a>

                </th>
            </tr>
        }
    </tbody>

</table>


